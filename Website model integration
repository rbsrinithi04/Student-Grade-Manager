<body>

<div class="container">
    <h2>Student Grade Manager</h2>

    <label>Student Name</label>
    <input type="text" id="name">

    <label>Mark 1</label>
    <input type="number" id="mark1">

    <label>Mark 2</label>
    <input type="number" id="mark2">

    <label>Mark 3</label>
    <input type="number" id="mark3">

    <button onclick="addStudent()">Add Student</button>
    <button id="viewBtn" onclick="viewStudents()">View Students</button>

    <div class="student-list" id="studentList"></div>
</div>

<script>
    let students = [];

    function calculateGrade(avg) {
        if (avg >= 90) return "A";
        else if (avg >= 75) return "B";
        else if (avg >= 60) return "C";
        else if (avg >= 40) return "D";
        else return "F";
    }

    function addStudent() {
        let name = document.getElementById("name").value;
        let m1 = parseFloat(document.getElementById("mark1").value);
        let m2 = parseFloat(document.getElementById("mark2").value);
        let m3 = parseFloat(document.getElementById("mark3").value);

        if (!name || isNaN(m1) || isNaN(m2) || isNaN(m3)) {
            alert("Please fill all fields correctly!");
            return;
        }

        let avg = (m1 + m2 + m3) / 3;
        let grade = calculateGrade(avg);

        students.push({
            name: name,
            marks: [m1, m2, m3],
            average: avg,
            grade: grade
        });

        alert("Student added successfully!");

        document.getElementById("name").value = "";
        document.getElementById("mark1").value = "";
        document.getElementById("mark2").value = "";
        document.getElementById("mark3").value = "";
    }

    function viewStudents() {
        let list = document.getElementById("studentList");
        list.innerHTML = "";

        if (students.length === 0) {
            list.innerHTML = "<p>No students found.</p>";
            return;
        }

        students.forEach(s => {
            let card = `
                <div class="card">
                    <strong>Name:</strong> ${s.name}<br>
                    <strong>Marks:</strong> ${s.marks.join(", ")}<br>
                    <strong>Average:</strong> ${s.average.toFixed(2)}<br>
                    <strong>Grade:</strong> ${s.grade}
                </div>
            `;
            list.innerHTML += card;
        });
    }
</script>

</body>
